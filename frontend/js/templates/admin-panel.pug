include mixins/icons.pug

div.admin-panel
  ul.tab-menu
    li.tab-menu__item.admin-panel__item_posts
      a.tab-menu__item-link.js-select-tab(href='#admin-panel__tab_posts') Posts
    li.tab-menu__item.admin-panel__item_threads
      a.tab-menu__item-link.js-select-tab(href='#admin-panel__tab_threads') Threads
    li.tab-menu__item.admin-panel__item_attachments
      a.tab-menu__item-link.js-select-tab(href='#admin-panel__tab_attachments') Attachments
    li.tab-menu__item.admin-panel__item_modlog
      a.tab-menu__item-link.js-select-tab(href='#admin-panel__tab_modlog') ModLog
  //- post tab
  div#admin-panel__tab_posts.tabs__content
    div.column
      button.js-select-all-items(type='button', data-target='.js-select-post') Select all posts
      button.js-deselect-all-items(type='button', data-target='.js-select-post, .js-select-attachment') Deselect all
    div.column
      button.js-set-post-flag(type='submit', name='isSage', value='true') #[+icon('arrow-circle-down', 'small')] Set sage
      button.js-set-post-flag(type='submit', name='isSage', value='false') Unset sage
    div.column
      button.js-set-post-flag(type='submit', name='isDeleted', value='true') #[+icon('trash', 'small')] Delete
      button.js-set-post-flag(type='submit', name='isDeleted', value='false') #[+icon('trash-restore', 'small')] Restore
    div.column
      button.js-set-post-flag(type='submit', name='isApproved', value='true') #[+icon('thumbs-up', 'small')] Set Approved
      button.js-set-post-flag(type='submit', name='isApproved', value='false') #[+icon('thumbs-down', 'small')] Unset Approved
  //- thread tab
  div#admin-panel__tab_threads.tabs__content
    div.column
      button.js-select-all-items(type='button', data-target='.post_op .js-select-post') Select all threads
      button.js-deselect-all-items(type='button', data-target='.post_op .js-select-post, .js-select-attachment') Deselect all threads
    div.column
      button.js-set-post-flag(type='submit', name='isSticky', value='true') #[+icon('thumbtack', 'small')] Set Sticky
      button.js-set-post-flag(type='submit', name='isSticky', value='false') Unset Sticky
    div.column
      button.js-set-post-flag(type='submit', name='isClosed', value='true') #[+icon('lock', 'small')] Close Thread
      button.js-set-post-flag(type='submit', name='isClosed', value='false') #[+icon('unlock', 'small')] Unclose Thread
  //- attachment tab
  div#admin-panel__tab_attachments.tabs__content
    div.column
      button.js-select-all-items(type='button', data-target='.js-select-attachment') Select all attachments
      button.js-deselect-all-items(type='button', data-target='.js-select-attachment') Deselect all
    div.column
      button.js-set-attachment-flag(type='submit', name='attachments.$[n].isDeleted', value='true') #[+icon('trash', 'small')] Delete
      button.js-set-attachment-flag(type='submit', name='attachments.$[n].isDeleted', value='false') #[+icon('trash-restore', 'small')] Restore
    div.column
      button.js-set-attachment-flag(type='submit', name='attachments.$[n].isSpoiler', value='true') Set Spoiler
      button.js-set-attachment-flag(type='submit', name='attachments.$[n].isSpoiler', value='false') Unset Spoiler
    div.column
      button.js-set-attachment-flag(type='submit', name='attachments.$[n].isNSFW', value='true') Set NSFW
      button.js-set-attachment-flag(type='submit', name='attachments.$[n].isNSFW', value='false') Unset NSFW
  //- attachment tab
  div#admin-panel__tab_modlog.tabs__content
    div.column
      button.js-select-all-items(type='button', data-target='.modlog-entry__change-entry__checkbox') Select all records
      button.js-deselect-all-items(type='button', data-target='.modlog-entry__change-entry__checkbox') Deselect all
    div.column
      button.js-send-form(type='button', data-target='#modlog-form') Undo selected actions
