extends layouts/default.pug

block bodyClass
  - var bodyClass = 'board-page'

block header
  include includes/boardheader.pug

block main
  include includes/postform.pug

  form#delform(action='/form/post', method='post')
    if !threads.length
      div.nothreads Nobody here but chickens
    for thread in threads
      != thread
    include includes/delpostform.pug

block footer
  include includes/pagination.pug
  include includes/boardfooter.pug

block scripts
  script(src='/.static/js/kotoba.js')
